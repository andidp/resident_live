= form_for @category, html: { class: "form-horizontal", role: "form" } do |f|
  -if @category.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"

      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :tite, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :tite, class: 'form-control'
  .form-group
    = f.label :description, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :created_at, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :created_at, class: 'form-control'
  .form-group
    = f.label :updated_at, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :updated_at, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
