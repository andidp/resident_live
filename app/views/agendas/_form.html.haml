= form_for @agenda, html: { class: "form-horizontal", role: "form" } do |f|
  -if @agenda.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@agenda.errors.count, "error")} prohibited this agenda from being saved:"

      %ul
        - @agenda.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :type, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :type, class: 'form-control'
  .form-group
    = f.label :venue, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :venue, class: 'form-control'
  .form-group
    = f.label :implementation_date, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.date_select :implementation_date, class: 'form-control'
  .form-group
    = f.label :created_at, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :created_at, class: 'form-control'
  .form-group
    = f.label :updated_at, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :updated_at, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
